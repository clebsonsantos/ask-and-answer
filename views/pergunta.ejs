<%- include ('partials/header.ejs') %>

<body>
<%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda essa pergunta :)</h3>
            <label> Resposta</label>
            <textarea name="corpo" id="" placeholder="Digite sua resposta..." class="form-control"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-secondary">Responder</button>
        </form>
        <hr>
        <h4>Respostas para essa pergunta:</h4>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo%><br></p>
                </div>
            </div>
        <% })%>
    </div>


</body>
<%- include ('partials/footer.ejs') %>
